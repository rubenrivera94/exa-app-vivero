<Window x:Class="ViveroGUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViveroGUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="500">
    <Grid Margin="10">
        <Label x:Name="lblUsername" Content="Ingrese Usuario" VerticalAlignment="Top" />
        <TextBox x:Name="txtUsername" Margin="0,40,0,339" Width="200" HorizontalAlignment="Left" />

        <Label x:Name="lblPassword" Content="Ingrese Contraseña" VerticalAlignment="Top" Margin="0,80,0,0" />
        <PasswordBox x:Name="txtPassword" Margin="0,106,0,270" Width="200" HorizontalAlignment="Left" />

        <Label x:Name="lblMensaje" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" />

        <Button x:Name="btbIniciarSesion" Content="Iniciar Sesion" Width="200" Margin="0,173,0,207" HorizontalAlignment="Left" Click="btnIniciarSesion_Click" />
    </Grid>
</Window>
